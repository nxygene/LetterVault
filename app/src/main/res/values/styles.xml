<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>
    <style name="MyFloatingButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:tint">?attr/colorOnPrimary</item>
        <item name="colorSecondary">?attr/colorOnPrimary</item>
        <item name="colorOnSecondary">?attr/colorPrimary</item>

    </style>
    <style name="MyToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
    </style>
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorOnSecondary</item>
        <item name="colorOnPrimary">?attr/colorOnSecondary</item>
    </style>
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorOnSecondary</item>
        <item name="colorOnPrimary">?attr/colorOnSecondary</item>
    </style>
    <style name="ToggleTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">?attr/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">?attr/colorOnPrimary</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">?attr/colorAccent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>
</resources>