<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="675dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:titleTextColor="@color/white" />


            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_marginRight="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="@id/confirm_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_time" />

            <ImageView
                android:id="@+id/confirm_icon"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.523"
                app:srcCompat="@drawable/ic_confirm" />

            <ImageView
                android:id="@+id/close_icon"
                android:layout_width="28dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close" />

            <TextView
                android:id="@+id/LetterVault_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:text="Letter Vault"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/close_icon"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/note_title_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note Title"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        android:layout_marginStart="18dp" />

    <TextView
        android:id="@+id/note_TV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aenean mollis pretium lacus, nec lobortis diam luctus et. Donec tristique erat vitae neque dignissim iaculis. Mauris pharetra risus ut rutrum tempor. Sed convallis urna in imperdiet luctus. Vestibulum malesuada sem rutrum turpis finibus sollicitudin. Sed lobortis accumsan magna, ac consequat sapien rutrum at. Integer non neque ut velit lacinia lobortis. Nulla porta maximus ipsum a ultricies. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Nullam sit amet augue quam. Nunc pellentesque consequat tortor quis malesuada. Integer laoreet augue at nibh malesuada pretium. Proin volutpat, arcu et rutrum congue, lectus diam vestibulum metus, at egestas arcu diam at ex. In malesuada egestas nulla."
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/note_title_TV" />


</androidx.constraintlayout.widget.ConstraintLayout>